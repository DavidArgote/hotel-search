    style.
        .text-li {
            font-style: none;
            font-family: Arial;
            cursor: pointer;
        }
        .text-li:hover {
            color: #4192D9;
        }
        .text-style-none {
            text-decoration: none;
            color: #000;
        }
        .container-search {
            width: 100%;
            height: 100vh;
        }
        .card {
            text-decoration: none;
            transition: transform .1s;
            color: #000;
        }
        .card:hover {
            color: #000;
            filter: drop-shadow(0 0.2rem 0.25rem rgba(0, 0, 0, 0.2));
            transform: scale(1.01);
        }
        header {
            border-bottom: 1px solid #c2c2c2;
        }
        .card-result {
            height: 25rem;
        }
        .img-result {
            height: 13rem;
        }